<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.yourorg.ruinlogrotate</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/rotate-ruin-log.sh</string>
    </array>
    <key>StartInterval</key>
    <integer>86400</integer> <!-- Run every 24h -->
    <key>RunAtLoad</key>
    <true/>
</dict>
</plist>